---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { copy } from '../config/copy';

const copyBundle = copy.en;
---

<BaseLayout title={copyBundle.notFound.title} lang="en" bodyClass="page-404">
  <Header slot="header" lang="en" currentPath="/404/" />
  
  <div class="container not-found-content">
    <h1>{copyBundle.notFound.title}</h1>
    <blockquote class="not-found-quote">
      <p class="not-found-quote-text">"All that is gold does not glitter,<br>Not all those who wander are lost"</p>
      <cite>â€” J. R. R. Tolkien</cite>
    </blockquote>
    <p>But you sure look lost to me.</p>
    <p><a href="/">{copyBundle.notFound.cta}</a></p>
  </div>

  <Footer slot="footer" lang="en" />
</BaseLayout>

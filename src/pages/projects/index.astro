---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const projects = await getCollection('projects', ({ data }) => data.lang === 'en');

// Sort projects by date (newest first)
projects.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout
  title="Projects â€” Deniz Koca"
  description="A collection of projects and tools I've built."
  lang="en"
  bodyClass="page-projects"
>
  <Header slot="header" lang="en" currentPath="/projects/" altLangUrl="/tr/projeler/" />

  <div class="page-heading page-heading--standalone container">
    <h1>Projects</h1>
    <p class="page-intro">A collection of projects and tools I've built.</p>
  </div>

  <section class="collection-section container">
    <div class="collection-grid collection-grid--projects">
      {projects.map((project) => (
        <article class="project-card project-card--collection">
          <a href={`/projects/${project.slug}/`} class="project-card__media">
            <img src={project.data.cover_image} alt={project.data.title} loading="lazy" decoding="async" />
          </a>
          <div class="project-card__body">
            <h2><a href={`/projects/${project.slug}/`}>{project.data.title}</a></h2>
            <p>{project.data.description}</p>
          </div>
        </article>
      ))}
    </div>
  </section>

  <Footer slot="footer" lang="en" />
</BaseLayout>